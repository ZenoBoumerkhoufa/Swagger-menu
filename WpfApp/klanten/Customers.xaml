<Window x:Class="WpfApp.klanten.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp.klanten"
        mc:Ignorable="d"
        Title="Customers" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dg_Customers" HorizontalAlignment="Center" Height="207" Margin="0,217,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="dg_Customer_DoubleClicked"/>
        <Button x:Name="btn_terug" Content="Terug" HorizontalAlignment="Left" Height="35" Margin="10,10,0,0" VerticalAlignment="Top" Width="69" Click="Button_Click"/>
        <Button x:Name="btn_toevoegen" Content="Toevoegen" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="69" Height="35" Click="btn_toevoegen_Click"/>

    </Grid>
</Window>
